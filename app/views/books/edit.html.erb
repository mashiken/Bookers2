<div class="row">


  <div class="col-md-6 col-md-offset-3">
     <h1>Editing Book</h1>

    <% if @book.errors.any? %>
      <div id="error_explanation">
        <h3><%= @book.errors.count %> errors prohibited this book from being saved:</h3>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_for(@book) do | f | %>

      <div class="field row">
        <label>Titile</label><br>
        <%= f.text_field :title, class: "col-xs-12" %>
      </div>
      <div class="field row">
        <label>Opinion</label><br>
        <%= f.text_area :body, class: "col-xs-12" %>
      </div>
      <div class="actions row">
        <%= f.submit "Update Book", class: "col-xs-12 btn btn-primary" %>
      </div>

    <% end %>
    <%= link_to "Show", book_path(@book) %><span> | </span><%= link_to "Back",books_path %>
  </div>

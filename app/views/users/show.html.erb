<div class="row">
	    <%= render partial: 'books/left_content', locals: { user: @user, book: @book } %>

    <div class="col-xs-9">
    	<h2>Books</h2>
            <table class="table table-hover">
	            <thead>
		            <tr>
			            <th></th>
			            <th>Title</th>
		                <th>Opinion</th>
		                <th colspan ="3"></th>
		            </tr>
	            </thead>
	        <tbody>
		    <% @books.each do |book| %>
		            <tr>
		                <td><%= attachment_image_tag book.user , :profile_image, format: 'jpeg', fallback:"no_image.jpg", size: "40x40" %></td>
		                <td><%= link_to book.title, book_path(book) %></td>
		                <td><%= book.body %></td>
		            </tr>
		        <% end %>
	        </tbody>
        </table>
    </div>
</div>